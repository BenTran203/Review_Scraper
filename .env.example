# ============================================
# ReviewPulse AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# --- Go API Gateway ---
PORT=8080
GIN_MODE=debug

# --- Redis ---
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# --- RabbitMQ ---
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# --- OpenAI (server-side only â€” NEVER expose to frontend) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Scraper Configuration ---
SCRAPER_ADAPTER=custom
# Options: custom, scraperapi, oxylabs
SCRAPERAPI_KEY=
MAX_REVIEWS=200
REVIEW_POSITIVE_RATIO=0.6
REVIEW_NEGATIVE_RATIO=0.4

# --- Session ---
SESSION_TTL_HOURS=1

# --- Frontend (Vercel / local dev) ---
NEXT_PUBLIC_API_URL=http://localhost:8080
